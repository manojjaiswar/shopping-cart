{{#if products}}
<div class="row">
    <div class="col-md-6 offset-md-3">
        <ul class="list-group">
            {{#each products}}
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <strong>{{this.item.title}}</strong>
                <span class="badge badge-success">${{this.price}}</span>
                <span class="badge badge-primary badge-pill">{{this.qty}}</span>
                <div class="btn-group">
                    <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true"
                        aria-expanded="false">
                        Action
                    </button>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="/reduce/{{this.item._id}}">Reduce by 1</a>
                        <a class="dropdown-item" href="/remove/{{this.item._id}}">Remove All</a>

                    </div>
                </div>
            </li>
            {{/each}}

        </ul>
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-6 offset-md-3">
        <strong>Total: {{this.totalPrice}}</strong>
    </div>
</div>
<hr>
<div class="row">
    <div class="col-md-6 offset-md-3">
        <a href="/checkout" type="button" class="btn btn-success">Checkout</a>
    </div>
</div>
{{else}}
<br />
<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2>No Item in cart</h2>
    </div>
</div>
{{/if}}
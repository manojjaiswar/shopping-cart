
<div class="row">
    {{# each products}}
        <div class="col-md-4">
            <div class="card mb-4">
                <img src="{{this.imagePath}}" alt="Card image cap">
                <div class="card-body">
                    <h4>{{this.title}}</h4>
                    <p class="card-text">{{this.description}}</p>
                    <div class="float-left"><strong>${{this.price}}</strong></div>
                    <a href="/add-to-cart/{{this._id}}" class="btn btn-success float-right">Add to Shopping Cart</a>
                </div>
            </div>
        </div>
    {{/each}}
</div>


